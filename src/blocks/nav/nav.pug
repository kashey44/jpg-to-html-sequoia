        img(src="/img/cat-3.jpg")
      a.col(href="#") УГОЛОВНЫЕ</br> ДЕЛА
        img(src="/img/cat-4.jpg")
      a.col(href="#") ПРОБЛЕМЫ СЕМЬИ, РАЗ-ВОД, АЛИМЕНТЫ, РАЗДЕЛ ИМУЩЕСТВА, НАСЛЕДСТВО
        img(src="/img/cat-3.jpg")
    .row
      a.col(href="#") ГРАЖДАНСКОЕ СУДОПРО-ИЗВОДСТВО
        img(src="/img/cat-6.jpg")
      a.col(href="#") АРБИТРАЖНЫЕ</br> СПОРЫ
        img(src="/img/cat-7.jpg")
      a.col(href="#") ТРУДОВЫЕ СПОРЫ, СПОРЫ С РАБОТОДАТЕЛЕМ
        img(src="/img/cat-8.jpg")        
