    a(href="#")&attributes(attributes) НОВОСТИ
    a(href="#")&attributes(attributes) СОВЕТЫ ЮРИСТОВ
    a(href="#")&attributes(attributes) ПОЛЕЗНАЯ ИНФОРМАЦИЯ
